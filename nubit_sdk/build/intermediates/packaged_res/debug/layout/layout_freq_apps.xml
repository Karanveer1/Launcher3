<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_marginTop="10dp"
    android:id="@+id/topNewsParentc_layout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="11dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_marginBottom="8dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/btn_freq_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/nubit_headingColor"
                android:textSize="@dimen/nubit_heading_size"
                android:textStyle="bold" />

<!--            <include-->
<!--                android:id="@+id/devider_below_new_freq_apps"-->
<!--                layout="@layout/view_divider"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.5dp"-->
<!--                android:layout_below="@+id/btn_freq_apps"-->
<!--                android:layout_marginTop="10dp" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFreqApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_freq_apps"
                android:layout_marginTop="5dp"
                android:scrollbars="none"/>

            <!--<include-->
            <!--    android:id="@+id/devider_below_topapps_ref"-->
            <!--    layout="@layout/view_divider"-->
            <!--    android:layout_width="match_parent"-->
            <!--    android:layout_height="12dp"-->
            <!--    android:layout_below="@+id/rvFreqApps"-->
            <!--    android:layout_marginTop="10dp" />-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
