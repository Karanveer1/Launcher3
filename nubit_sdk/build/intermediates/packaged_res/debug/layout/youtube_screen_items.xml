<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_topYoutubeItems"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/txt_youtube_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/img_youtubes"
        android:maxLines="2"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_youtube_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_youtube_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/img_youtubes"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/txt_perm_des"
        android:textSize="13sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/txt_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_youtube_des"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/img_youtubes"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/pop_up_text"
        android:textSize="11sp" />


    <ImageView
        android:id="@+id/img_youtubes"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY" />


    <include
        android:id="@+id/layout_admob"
        layout="@layout/layout_admob_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>