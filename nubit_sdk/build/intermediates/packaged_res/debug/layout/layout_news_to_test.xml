<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topNewsParent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/btn_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="News testinggrege"
        android:textAllCaps="false"
        android:textColor="@color/nubit_headingColor"
        android:textSize="@dimen/nubit_heading_size"
        android:textStyle="bold" />

    <!--   <ImageButton
           android:id="@+id/topNews_spinner"
           style="?android:attr/actionOverflowButtonStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="@dimen/spinner_right_margin" />-->

    <include
        android:id="@+id/devider_below_new_ref"
        layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/btn_news_title"
        android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_top_recyclerVie_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider_below_new_ref"
        android:layout_marginTop="5dp"
        android:scrollbars="none" />

    <include
        android:id="@+id/devider_below_topnews"
        layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/news_top_recyclerVie_test"
        android:layout_marginTop="10dp" />


</RelativeLayout>
