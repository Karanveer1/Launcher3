<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topapps_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/topapps_items_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_style">


        <ImageView
            android:id="@+id/topapps_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_topapps_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topapps_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="App Title"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal" />


        <include
            android:id="@+id/topApps_divider"
            layout="@layout/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txt_topapps_name"
            android:layout_marginTop="5dp" />


        <Button
            android:id="@+id/btn_install_topapps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topApps_divider"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/games_install_style"
            android:ellipsize="end"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:stateListAnimator="@null"
            android:text="Install"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal" />

        <include
            android:id="@+id/layout_admob"
            layout="@layout/layout_admob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>