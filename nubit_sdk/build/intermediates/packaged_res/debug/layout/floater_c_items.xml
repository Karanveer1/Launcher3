<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floater_cate_cardview"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#dadada"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/layout_floaterContainer" android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/floater_cate_style"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_floater_category"
            android:layout_width="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:layout_height="20dp"
            />



        <TextView
            android:id="@+id/txt_floater_category_title"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:text="Floater Category Name"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            />





    </LinearLayout></androidx.cardview.widget.CardView>