<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/nubit_bg_theme"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/txt_setLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Select Language"
            android:layout_marginTop="23dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressbar_Language"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_back"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/language_recyclerView"
            android:scrollbars="none"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/progressbar_Language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_set_Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_set_riple"
            android:text="Set Language"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:layout_below="@+id/language_recyclerView"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </RelativeLayout>

</ScrollView>