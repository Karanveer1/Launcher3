<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floater_sub_container_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <FrameLayout
        android:id="@+id/floater_sub_container_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/floater_sub_container_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/news_pop_style"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Title"
                    android:textColor="@color/homeTabColorSelected"
                    android:textSize="17dp"
                    android:textStyle="normal" />


                <View
                    android:id="@+id/btn_devider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#e1e1e1"
                    android:text="Divider" />


                <com.skd.nubit.utilityclasses.MyGridView
                    android:id="@+id/news_pub_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="false"
                    android:columnWidth="61dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />

                <View
                    android:id="@+id/btn_devider_below_grid"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Divider" />


                <Button
                    android:id="@+id/btn_pub_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_newspop_style"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:stateListAnimator="@null"
                    android:text="Done"
                    android:textColor="@color/homeTabColorSelected"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>


        </FrameLayout>

        <ImageView
            android:id="@+id/popup_cross_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/popup_cross_button" />
    </FrameLayout>
</FrameLayout>